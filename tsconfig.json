{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "inlineSourceMap": true,
    "sourceMap": false,
    "outDir": "./dist",
    "declaration": true,
    "noImplicitAny": false,
    "types": ["node", "mocha"],
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
